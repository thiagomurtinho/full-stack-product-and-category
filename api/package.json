{
  "name": "api",
  "version": "1.0.0",
  "description": "Functional Core / Imperative Shell Architecture Demo",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:prod": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run db:generate",
    "docs:generate": "ts-node -e \"import('./src/config/swagger.config').then(m => require('fs').writeFileSync('./openapi.json', JSON.stringify(m.specs, null, 2)))\"",
    "docs:serve": "npm run dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage --verbose --coverageReporters=text-lcov",
    "test:unit": "jest --testPathPattern=__tests__ --coverage --verbose",
    "test:integration": "jest --testPathPattern=routes/__tests__ --coverage --verbose",
    "test:domain": "jest --testPathPattern=domain/__tests__ --coverage --verbose",
    "test:handlers": "jest --testPathPattern=handlers/__tests__ --coverage --verbose"
  },
  "keywords": [
    "functional",
    "core",
    "shell",
    "architecture",
    "interview"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/cors": "^2.8.19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}