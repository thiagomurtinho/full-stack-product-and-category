{
  "name": "full-stack-product-and-category",
  "version": "1.0.0",
  "description": "Full Stack Product and Category - Interview Challenge",
  "private": true,
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev": "bash setup.sh",
    "dev:api": "npm run dev --workspace=api",
    "dev:web": "npm run dev --workspace=web",
    "dev:interactive": "bash setup.sh",
    "dev:foreground": "bash setup.sh",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=api",
    "build:web": "npm run build --workspace=web",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test --workspace=api",
    "test:web": "npm run test --workspace=web",
    "install:all": "npm install",
    "db:setup": "npm run db:generate --workspace=api && npm run db:reset --workspace=api",
    "db:reset": "npm run db:reset --workspace=api",
    "docker:up": "docker-compose up -d postgres",
    "docker:down": "docker-compose down",
    "setup": "bash setup.sh",
    "start": "bash setup.sh",
    "start:prod": "bash setup-production.sh",
    "stop": "bash stop-all.sh",
    "stop:all": "bash stop-all.sh",
    "status": "bash status.sh",
    "restore-turbopack": "bash restore-turbopack.sh",
    "logs": "echo 'ðŸ“„ Log files:' && ls -la *.log 2>/dev/null || echo 'No log files found'",
    "logs:api": "tail -f api.log",
    "logs:web": "tail -f web.log",
    "logs:prisma": "tail -f prisma-studio.log",
    "clean": "rm -f *.log && echo 'âœ… Log files cleaned'",
    "restart": "bash stop-all.sh && sleep 2 && bash setup.sh"
  },
  "keywords": [
    "full-stack",
    "express",
    "nextjs",
    "typescript",
    "prisma",
    "postgresql",
    "interview"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0"
  }
} 